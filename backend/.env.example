# Database Options (choose one)
# SQLite (no installation needed):
DATABASE_URL=sqlite:///./zenith_study_buddy.db

# MySQL (free):
# DATABASE_URL=mysql://root:password@localhost/zenith

# PostgreSQL (original):
# DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# Redis (optional, can be removed)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Omnidim
OMNIDIM_API_KEY=your-omnidim-api-key-here
OMNIDIM_API_URL=https://api.omnidim.io/v1
OMNIDIM_WS_URL=wss://ws.omnidim.io

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Environment
ENVIRONMENT=development
DEBUG=True